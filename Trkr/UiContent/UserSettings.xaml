<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="Trkr.UiContent.UserSettings"
             Title="User Settings"
             Icon="msettings_black_24pt_1x.png"
             BackgroundColor="#F3F3F3">
    <ContentPage.Padding>
        <OnPlatform x:TypeArguments="Thickness"
                    iOS="20, 120, 20, 20"
                    Android="20,20,20,20"
                    />    
    </ContentPage.Padding>
    <ContentPage.Content>
        
        
        <StackLayout VerticalOptions="FillAndExpand"
                     HorizontalOptions="FillAndExpand"
                     Orientation="Vertical">
                
                <Label Text="Logout" />
                <Button x:Name="logoutButton" Text="Logout" Clicked="OnLogout" BackgroundColor="Red" BorderRadius="10"/>
                
            
            </StackLayout>    
    </ContentPage.Content>
</ContentPage>
